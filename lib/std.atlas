fn power(a: i64, b: i64) -> i64 =
    match b with
    | 0 => 1,
    \ _ => a * power(a, b - 1)

fn mul(a: i64, b: i64) -> i64 = a * b

fn add(a: i64, b: i64) -> i64 = a + b

fn sub(a: i64, b: i64) -> i64 = a - b

fn div(a: i64, b: i64) -> i64 = a / b

fn mod(a: i64, b: i64) -> i64 = a % b

fn abs(a: i64) -> i64 = 
    match a < 0 with 
    | true => -a,
    \ _ => a